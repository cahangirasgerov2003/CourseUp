<!--==========================
    INSIDE HERO SECTION Section
============================-->
<section class="page-image page-image-contact md-padding">
  <h1 class="text-white text-center">POST</h1>
</section>

<!--==========================
    Contact Section
============================-->
<section id="singlePost" class="md-padding">
  <div class="container">
    <div class="row">
      <main id="main" class="col-md-8">
        <div class="blog">
          <div class="blog-img">
            <img
              class="img-fluid"
              style="border-radius: 2px; min-width: 100%; max-height: 400px; object-fit: cover;"
              src={{post.post_file}}
              alt="Course"
            />
          </div>
          <div class="blog-content">
            <ul class="blog-meta">
              <li><i class="fas fa-user"></i>{{post.author.userName}}</li>
              <li><i class="fas fa-clock"></i>{{generateDate
                  post.date
                  "MMM Do LTS"
                }}</li>
              <li><i class="fas fa-comments"></i>57</li>
            </ul>
            <h3>{{post.title}}</h3>
            <p>{{post.content}}</p>
          </div>

          <div class="blog-comments">
            <h3 class="mb-4">({{number_of_comments}}) Comments</h3>

          {{#each comments}}
            <!-- comment -->
            <div class="media" style="border-radius: 4px; background-color: rgb(245, 240, 234); margin-bottom: 30px; box-shadow: rgba(0, 0, 0, 0.4) 0px 30px 90px; min-height: 150px;">
              <div class="media-body">
                <h4 class="media-heading"><span class="mr-1">{{numbering @index}}.</span>Comment from {{commenterName}}<span class="time" style="font-size: 15px;">{{generateDate date "LLLL"}}</span></h4>
                <p style="color: rgb(25, 109, 52);">{{contentOfComment}}</p>
              </div>
            </div>
            <!-- /comment -->
          {{/each}}

          </div>

          <!-- reply form -->
          <div class="reply-form">
            <h3 style="margin-bottom: 12px;">Leave A Comment
              <i
                class="far fa-comment-dots"
                style="font-size:24px;color:red; margin-left: 6px;"
              ></i></h3>
            <form
              id="sendEmailMessageForm"
              method="post"
              action="/posts/{{post._id}}/comment"
              enctype="multipart/form-data"
            >
              <input
                class="form-control mb-4"
                name="commenterName"
                type="text"
                placeholder="Name"
              />
              <input
                class="form-control mb-4"
                type="email"
                placeholder="Email"
                name="commenterEmail"
              />
              <textarea
                class="form-control mb-4"
                row="5"
                placeholder="Add Your Commment ..."
                name="contentOfComment"
              ></textarea>

              <button type="submit" class="main-btn">Submit</button>
            </form>
          </div>
          <!-- /reply form -->
        </div>
      </main>
      <!-- /Main -->

      <aside id="aside" class="col-md-4">
        
        {{> searchPost}}
        
        <div class="widget">
          <h3 class="mb-3">Post's category</h3>
          <h4 style="color:rgb(95, 95, 95)">{{post.selectedCategory.categoryName}}</h4>
        </div>

        {{> latestPost}}

      </aside>

    </div>

  </div>
</section>