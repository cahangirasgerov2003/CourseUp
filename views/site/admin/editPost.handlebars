<!--==========================
    INSIDE HERO SECTION Section
============================-->
<section class="page-image page-image-contact md-padding">
  <h1 class="text-white text-center">EDIT POST</h1>
</section>

<!--==========================
    Contact Section
============================-->
<section id="contact" class="md-padding">
  <div class="container">

    <div class="row text-center">
      <div class="col-md-4 offset-md-4">
        <div class="section-header">
          <h2 class="title">EDIT POST</h2>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12">
        <form
          action="/admin/post/edit/{{post._id}}?_method=PUT"
          method="post"
          enctype="multipart/form-data"
        >
          <input type="hidden" name="_method" value="PUT" />
          <div class="offset-2 col-md-8">
            <div class="form-group">
              <input
                class="form-control"
                name="title"
                type="text"
                {{! placeholder="Post title" }}
                value="{{post.title}}"
                required="required"
                data-validation-required-message="Please enter post title."
              />
              <p class="help-block text-danger"></p>
            </div>
            <div class="form-group">
              <textarea
                class="form-control"
                name="content"
                {{! placeholder="Your content" }}
                required="required"
                data-validation-required-message="Please enter post content."
              >{{post.content}}</textarea>
              <p class="help-block text-danger"></p>
            </div>
            <div class="form-group">
              <select class="form-control" name="selectedCategory">
                {{#each categories}}
                  <option value={{_id}} {{#if (isEqual _id ../post.selectedCategory)}}selected{{/if}}>{{categoryName}}</option>
                {{/each}}
              </select>
            </div>
            <div class="form-group">
              <input
                type="file"
                name="post_file"
                class="form-control rounded-4"
                required="required"
                data-validation-required-message="Please enter post photo."
                style="cursor: pointer;"
              />
            </div>
          </div>
          <div class="clearfix"></div>
          <div class="col-lg-12 text-center">
            <div id="success"></div>
            <button id="editPostButton" class="main-btn" type="submit">EDIT Post</button>
          </div>
        </form>
      </div>
    </div>

  </div>
</section>