<!--==========================
    INSIDE HERO SECTION Section
============================-->
<section class="page-image page-image-about md-padding">
  <h1 class="text-white text-center">EDIT CATEGORY</h1>
</section>

<!--==========================
    ADMIN Section
============================-->
<section
  id="editCategoryID"
  class="md-padding"
  style="display: flex; align-items: center;"
>
  <div class="container">
       {{> admin-bar}}
    <div class="row mt-5">
      <div class="col-xl-6 col-12 pr-md-5 mb-md-0 mb-5">
        <form action="/admin/category/edit/{{category._id}}?_method=PUT" method="post" enctype="multipart/form-data">
        <input type="hidden" name="_method" value="PUT"/>
          <div class="mb-4">
            <div class="form-group"> 
              <input
                class="form-control"
                style="padding-top:26px; padding-bottom: 26px; "
                name="categoryName"
                type="text"
                value="{{category.categoryName}}"
                required="required"
                data-validation-required-message="Please enter category name."
              />
              <p class="help-block text-danger"></p>
            </div>
          </div>
          <div>
            <div id="success"></div>
            <button
              id="editCategoryButton"
              class="main-btn d-block w-100 m-0 px-0 rounded"
              style="font-size: 16px; font-weight: bold;"
              type="submit"
            >Edit Category</button>
          </div>
        </form>
      </div>
    </div> 
  </div>
</section>